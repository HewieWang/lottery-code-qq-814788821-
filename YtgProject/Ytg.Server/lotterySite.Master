                var noReadCount = 0;
                var jsonData = JSON.parse(cooksStr);
                allNoReeadCount = jsonData.length;
            }

            if (allNoReeadCount > 0)
                $("#showchart_noreader_msg").html("有<span style='color:red;'>" + allNoReeadCount + "</span>条未读消息")
