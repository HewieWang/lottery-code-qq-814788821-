        //修改未读消息列表
        function updatenoread() {

            var allNoReeadCount = 0;
            if ($(".leftsidebar_box dd").length > 1) {
                allNoReeadCount = setLstReadCount();
            } else {
                var cooksStr = getCookie("message_content");

                if (cooksStr == undefined || cooksStr == null)
